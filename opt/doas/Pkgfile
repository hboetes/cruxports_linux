# Description: tiling wm
# URL:         https://www.herbstluftwm.org/
# Depends on:

name=doas
version=git
release=1

build()
{
    cd $PKGMK_SOURCE_DIR
    if cd $name ; then
        git pull
    else
        git clone https://github.com/nholstein/OpenDoas.git $name
    fi
    cp -r $PKGMK_SOURCE_DIR/$name $SRC
    cd $SRC/$name
    make
    make install DESTDIR=$PKG
}
