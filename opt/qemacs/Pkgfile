# Description: mini emacs clone
# URL:         http://savannah.nongnu.org/projects/qemacs

name=qemacs
version=git
release=1
source="https://gitlab.com/hboetes/qemacs.git"

build()
{
    cd $name
    ./configure
    make LDFLAGS='-lm'
    make install DESTDIR=$PKG
    for i in qe xqe; do
        install -s $i $PKG/usr/local/bin
        ln -sf $i $PKG/usr/local/bin/${i}macs
    done
}
