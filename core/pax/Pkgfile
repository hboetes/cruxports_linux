# Description: mirbsd implementation of pax, provides cpio, tar and pax
# URL:         https://packages.debian.org/buster/pax

name=pax
version=20190224
release=1
source="http://deb.debian.org/debian/pool/main/p/pax/pax_$version.orig.tar.xz"

build()
{
    cd $name
    sh ./Build.sh
    mkdir -p $PKG/bin
    install -s pax $PKG/bin/pax
    ln $PKG/bin/pax $PKG/bin/cpio
    ln $PKG/bin/pax $PKG/bin/tar
    mkdir -p $PKG/usr/share/man/man1/
    install -m 444 mans/cpio.1 mans/pax.1 mans/tar.1 $PKG/usr/share/man/man1/
}
