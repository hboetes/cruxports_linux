# Description: mirbsd implementation of pax, provides cpio, tar and pax
# URL:         https://packages.debian.org/buster/pax

name=pax
version=20190224
release=1
source="http://deb.debian.org/debian/pool/main/p/pax/pax_$version.orig.tar.xz"

build()
{
    cd $name
    sh ./Build.sh
    mkdir -p $PKG/usr/local/bin
    install -s pax $PKG/usr/local/bin/paxtar
    mkdir -p $PKG/usr/local/man/man1/
    install -m 444 mans/tar.1 $PKG/usr/local/man/man1/paxtar.1
}
